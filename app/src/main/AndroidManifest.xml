<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.unitins.quadro.quadrodehorarios">

    <!-- Permiss達o para usar a Internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Permiss達o para fazer Teste de Conex達o -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- Permiss達o para usar o Localizador -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-feature android:name="android.hardware.location.gps"/>
    <!-- habilitar opengl -->
    <uses-feature android:glEsVersion="0x00020000" android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".views.activity.Principal"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".views.activity.HorarioPesquisa"
            android:parentActivityName=".views.activity.Principal">

            <!-- Parent activity -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".views.activity.Principal" />
        </activity>

        <activity
            android:name=".views.activity.HorarioDetalhes"
            android:parentActivityName=".views.activity.Principal">

            <!-- Parent activity -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".views.activity.Principal" />
        </activity>

        <activity
            android:name=".views.activity.NoticiaDetalhes"
            android:parentActivityName=".views.activity.Principal">

            <!-- Parent activity -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".views.activity.Principal" />
        </activity>
    </application>

</manifest>